<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- FGO Sheba Dark Theme -->
    <style name="Theme.Sheba" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_gold</item>
        <item name="colorPrimaryVariant">@color/accent_gold_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_purple_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_card</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@drawable/bg_gradient_main</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Sheba.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Sheba.Button.Outlined</item>

        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.Sheba.CardView</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.Sheba.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="backgroundTint">@color/accent_gold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Sheba.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/accent_gold</item>
        <item name="strokeColor">@color/accent_gold</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/glow_gold</item>
    </style>

    <style name="Widget.Sheba.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/accent_gold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/glow_gold</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.Sheba.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">20dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Sheba.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.Sheba.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/accent_gold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Sheba.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Sheba.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Sheba.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Dialog Style -->
    <style name="Theme.Sheba.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/surface_card</item>
        <item name="colorSurface">@color/surface_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Sheba.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Sheba.Dialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Sheba.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Sheba.Button.Text</item>
    </style>

    <style name="TextAppearance.Sheba.Dialog.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/accent_gold</item>
    </style>

    <style name="TextAppearance.Sheba.Dialog.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.Sheba.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_gold</item>
    </style>
</resources>
