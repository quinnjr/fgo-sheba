<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="48dp">

            <!-- Header Section with Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <!-- Animated Logo Container -->
                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp">

                    <!-- Pulse Ring (animated in code) -->
                    <View
                        android:id="@+id/pulseRing"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="@drawable/bg_pulse_ring"
                        android:alpha="0.5" />

                    <!-- Logo -->
                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sheba_logo"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>

                <!-- Title with gradient effect -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="36sp"
                    android:textColor="@color/text_gold"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/app_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:letterSpacing="0.05" />
            </LinearLayout>

            <!-- Status Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glow_gold">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Status Indicator -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp">

                        <View
                            android:id="@+id/statusGlow"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_status_indicator"
                            android:alpha="0.3" />

                        <View
                            android:id="@+id/statusDot"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_status_inactive" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStatusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textSize="11sp"
                            android:textColor="@color/text_hint"
                            android:letterSpacing="0.15"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_idle"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Permissions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="PERMISSIONS"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:letterSpacing="0.15" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <!-- Accessibility Permission Item -->
                    <LinearLayout
                        android:id="@+id/permissionAccessibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_permission_item"
                            android:src="@drawable/ic_accessibility"
                            android:contentDescription="Accessibility" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accessibility Service"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvAccessibilityStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not enabled"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAccessibilityStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_error_circle"
                            android:contentDescription="Status" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="72dp"
                        android:background="#10FFFFFF" />

                    <!-- Overlay Permission Item -->
                    <LinearLayout
                        android:id="@+id/permissionOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_permission_item"
                            android:src="@drawable/ic_overlay"
                            android:contentDescription="Overlay" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display Overlay"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvOverlayStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not granted"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivOverlayStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_error_circle"
                            android:contentDescription="Status" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="SESSION STATS"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:letterSpacing="0.15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Battles Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_stat_card"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BATTLES"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvBattleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textColor="@color/accent_gold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Runtime Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_stat_card"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUNTIME"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvRuntime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="28sp"
                        android:textColor="@color/accent_gold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Cards Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_stat_card"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NPs USED"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvNPCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textColor="@color/accent_gold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                style="@style/Widget.Sheba.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Settings"
                app:icon="@drawable/ic_settings"
                app:iconGravity="start"
                app:iconPadding="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Button -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/primary_dark"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="24dp">

            <Button
                android:id="@+id/btnToggleAutomation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/start_automation"
                android:textSize="16sp"
                android:textColor="@color/primary_dark"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:background="@drawable/bg_start_button"
                android:enabled="false"
                android:stateListAnimator="@null"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />

            <!-- Version -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/app_version"
                android:textSize="11sp"
                android:textColor="@color/text_hint" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
